<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">  
  
<hibernate-configuration>  
  
    <session-factory>  
        <property name="hbm2ddl.auto">update</property>  
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>  
        <property name="connection.url">jdbc:mysql://localhost:3306/testsql</property>  
        <property name="connection.username">root</property>  
        <property name="connection.password">123456</property>  
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>  
    <mapping resource="FramgiaProject/project01/model/user.hbm.xml"/> 
    <mapping resource="FramgiaProject/project01/model/category.hbm.xml"/>
    <mapping resource="FramgiaProject/project01/model/tour_master.hbm.xml"/> 
	<mapping resource="FramgiaProject/project01/model/tour.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/booking_request.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/discount.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/rating.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/review.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/like.hbm.xml"/>
	<mapping resource="FramgiaProject/project01/model/activity.hbm.xml"/>
    </session-factory>  
  
</hibernate-configuration>  
